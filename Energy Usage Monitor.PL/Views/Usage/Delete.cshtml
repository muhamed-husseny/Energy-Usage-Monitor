@model DeviceUsageToReturnDto

@{
    ViewData["Title"] = "Delete Device Usage";
}

<h2 class="text-2xl font-bold mb-6 text-white">Delete Device Usage</h2>

<div class="bg-gray-800 p-6 rounded-lg shadow-md text-white space-y-4">
    <div>
        <strong>Start Time:</strong>
        <span>@Model.StartTime.ToString("g")</span>
    </div>
    <div>
        <strong>End Time:</strong>
        <span>@Model.EndTime.ToString("g")</span>
    </div>
    <div>
        <strong>Device ID:</strong>
        <span>@Model.ElectricalDeviceId</span>
    </div>
    <div>
        <strong>Energy Consumed (kWh):</strong>
        <span>@Model.EnergyConsumedKWh</span>
    </div>
    <div>
        <strong>Duration (hours):</strong>
        <span>@Model.DurationHours</span>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-6">
    <input type="hidden" name="usageId" value="@Model.Id" />


    <p class="text-red-400 font-semibold mt-4">Are you sure you want to delete this usage record?</p>

    <div class="mt-4 flex space-x-4">
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded">Delete</button>
        <a asp-action="Index" class="text-gray-300 hover:underline">Cancel</a>
    </div>
</form>
